<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:autofillHints="@string/my_mail"
        android:id="@+id/mEdtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/my_mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/mEdtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/my_pass"
        android:autofillHints="@string/my_pass"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/mBtnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_btn" />
</LinearLayout>